@model MVSCCSUI.Models.Users
<div class="box_account account">
    <h3 class="new_client">New User</h3> <small class="float-right pt-2">* Required Fields</small>
    @using (Html.BeginForm("SignIn", "Login", FormMethod.Post))
    {
        <div class="form_container">
            <div class="form-group">
                @Html.TextBoxFor(x => x.EmailId, new { @class = "form-control", @name = "EmailId", @id = "EmailId", @placeholder = "Email*" })
            </div>
            <div class="form-group">
                @Html.PasswordFor(x => x.Password, new { @class = "form-control", @name = "Password", @id = "Password", @placeholder = "Password*" })
            </div>
            <hr>
            <div class="form-group">
                <label class="container_radio" style="display: inline-block; margin-right: 15px;">
                    Private
                    <input type="radio" name="RegisteredAsPOC" checked value="P">
                    <span class="checkmark"></span>
                </label>
                <label class="container_radio" style="display: inline-block;">
                    Company
                    <input type="radio" name="RegisteredAsPOC" value="C">
                    <span class="checkmark"></span>
                </label>
            </div>
            <div class="private P box">
                <div class="row no-gutters">
                    <div class="col-6 pr-1">
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control", @placeholder = "Name*" })
                        </div>
                    </div>
                    <div class="col-6 pl-1">
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.LastName, new { @class = "form-control", @placeholder = "Last Name*" })
                        </div>
                    </div>
                </div>
            </div>
            <!-- /private -->
            <div class="company C box" style="display: none;">
                <div class="row no-gutters">
                    <div class="col-12">
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.CompanyName, new { @class = "form-control", @placeholder = "Company Name*" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="row no-gutters">
                <div class="col-12">
                    <div class="form-group">
                        @Html.TextBoxFor(x => x.FullAddress, new { @class = "form-control", @placeholder = "Full Address*" })
                    </div>
                </div>
            </div>
            <div class="row no-gutters">
                <div class="col-6 pr-1">
                    <div class="form-group">
                        @Html.TextBoxFor(x => x.City, new { @class = "form-control", @placeholder = "City*" })
                    </div>
                </div>
                <div class="col-6 pl-1">
                    <div class="form-group">
                        @Html.TextBoxFor(x => x.PostalCode, new { @class = "form-control", @placeholder = "Postal Code*" })
                    </div>
                </div>
            </div>
            <!-- /row -->
            <div class="row no-gutters">
                <div class="col-6 pr-1">
                    <div class="form-group">
                        <div class="custom-select-form">
                            @Html.DropDownListFor(model => model.City, Model.sb as SelectList, "Select*", new { @class = "form-control wide add_bottom_10" })
                          </div>
                    </div>
                </div>
                <div class="col-6 pl-1">
                    <div class="form-group">
                        @Html.TextBoxFor(x => x.Telephone, new { @class = "form-control", @placeholder = "Telephone *" })
                    </div>
                </div>
            </div>
            <!-- /row -->
            <hr>
            <div class="form-group">
                <label class="container_check">
                    Accept <a href="#0">Terms and conditions</a>
                    <input type="checkbox">
                    <span class="checkmark"></span>
                </label>
            </div>
            <div class="text-center"><input type="submit" value="Register" class="btn_1 full-width"></div>
        </div>
    }
    <!-- /form_container -->
</div>